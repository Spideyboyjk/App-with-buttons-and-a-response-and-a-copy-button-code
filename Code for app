<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .button-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        button {
            background-color: blue;
            border: none;
            color: white;
            padding: 10px 100px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 7px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        button:active {
            background-color: #0066cc;
        }

        button span {
            display: block;
        }

        button .response {
            font-size: 12px;
            margin-top: 5px;
        }

        button .copy-button {
            background-color: lightgray;
            color: black;
            padding: 2px 5px;
            border-radius: 3px;
            margin-top: 10px;
            display: none;
        }

        button.active .copy-button {
            display: block;
        }
    </style>
</head>
<body>
    <div class="button-container">
        <button id="button-1" onclick="toggleCopyButton(1)">
            <span>Button 1</span>
            <span class="response">Response for Button 1</span>
            <span class="copy-button" onclick="copyText(1)">Copy</span>
        </button>

        <!-- Add 19 more buttons here, each with a unique "button-<number>" ID and the same structure -->

    </div>

    <script>
        function toggleCopyButton(buttonId) {
            const button = document.getElementById(`button-${buttonId}`);
            button.classList.toggle('active');
        }

        function copyText(buttonId) {
            const button = document.getElementById(`button-${buttonId}`);
            const response = button.getElementsByClassName('response')[0];
            const text = response.textContent;

            const input = document.createElement('input');
            input.value = text;
            document.body.appendChild(input);
            input.select();
            document.execCommand('copy');
            document.body.removeChild(input);

            alert(`Copied: ${text}`);
        }
    </script>
</body>
